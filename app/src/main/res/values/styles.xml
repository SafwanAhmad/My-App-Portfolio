<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--Set the color for the toolbar -->
        <item name="colorPrimary">#37474F</item>

        <item name="colorPrimaryDark">#263238</item>
    </style>

    <!--Style for buttons -->
    <style name="button_style">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/button_color</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:textSize">20dp</item>
    </style>

</resources>
