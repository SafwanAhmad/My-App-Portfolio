<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/button_pressed">

    <!--This is the style in the default state of button -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:width="1dip" android:color="@color/button_stroke_color" />
            <gradient android:angle="-90" android:startColor="@color/button_default" android:endColor="@color/button_default" />
        </shape>
    </item>

</ripple>
